      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <% end %>
  <% else %>
    <h2><mark>Get in touch</mark></h2>

    <p>
      Check us out with this form! <br>
      For any questions, collaborations, projects...
    </p>

    <%= form_for @contact,url: {action: "mail"} , html:{id: "formulaire"} do |f| %>
      
        <%= f.email_field :email, placeholder: "Your e-mail" %>

        <%= f.text_field :name, placeholder: "Your Name/BRAND" %>

        <%= f.text_area :message, placeholder: "Write a few about your business" %>

        <%= recaptcha_tags theme: 'dark' %>

        <%= f.submit "Send", id: "button" %>
      
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <% end %>
